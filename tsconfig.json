{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["dom", "esnext.asynciterable"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "strict": false,

        "esModuleInterop": true,
        "sourceMap": true,
        "pretty": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,

        "paths": {
            "@utils/*": ["utils/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.ts"]
}